@using Monkey.Core.Models.Auth
@model SignInModel
@{
    Layout = "/Areas/Portal/Views/Shared/_LayoutAnonymous.cshtml";
    ViewData[Constants.ViewDataKey.Title] = "Owl | Authentication";
}

<h3 class="font-size-24">Sign In</h3>
<p>Sign In to Protal Website</p>

<form asp-controller="Auth" asp-action="SignIn" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">
    @Html.AntiForgeryToken()
    
    <input type="hidden" asp-for="RedirectUrl"/>

    <div class="form-group form-material" data-plugin="formMaterial">
        <label asp-for="UserName" class="form-control-label" for="@nameof(Model.UserName)"></label>
        <input asp-for="UserName" class="form-control" type="text" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group form-material" data-plugin="formMaterial">
        <label asp-for="Password" class="form-control-label" for="@nameof(Model.Password)"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group clearfix">
        <a class="float-right" href="@Url.AbsoluteAction("CannotSignIn", "Auth")">Cannot Sign In?</a>
    </div>
    <button type="submit" class="btn btn-primary ladda-button btn-block" data-style="slide-right" data-plugin="ladda">
        <span class="ladda-label">
            Sign in<i class="icon md-long-arrow-right mr-10" aria-hidden="true"></i>
        </span>
    </button>
</form>
