@model Monkey.Core.Models.Auth.SetPasswordModel
@{
    Layout = "/Areas/Portal/Views/Shared/_LayoutAnonymous.cshtml";
    ViewData[Constants.ViewDataKey.Title] = "Monkey | Set Password";
}

<h3 class="font-size-24">Set New Password</h3>
<p>Set new password to your account</p>

<form asp-controller="Auth" asp-action="SubmitSetPassword" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">

    <input type="hidden" asp-for="Token" />

    <div class="form-group form-material" data-plugin="formMaterial">
        <label asp-for="Password" class="form-control-label" for="@nameof(Model.Password)"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group form-material" data-plugin="formMaterial">
        <label asp-for="ConfirmPassword" class="form-control-label" for="@nameof(Model.ConfirmPassword)"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="row">
        <div class="col-md-6 form-material">
            <a class="btn btn-default ladda-button btn-block" data-style="slide-right" data-plugin="ladda" href="@Url.AbsoluteAction("CannotSignIn", "Auth")">
                <span class="ladda-label">
                    <i class="icon md-long-arrow-left mr-10" aria-hidden="true"></i>Back
                </span>
            </a>
        </div>
        <div class="col-md-6 form-material">
            <button type="submit" class="btn btn-primary ladda-button btn-block" data-style="slide-right" data-plugin="ladda">
                <span class="ladda-label">
                    <i class="icon md-check mr-10" aria-hidden="true"></i>Save
                </span>
            </button>
        </div>
    </div>
</form>