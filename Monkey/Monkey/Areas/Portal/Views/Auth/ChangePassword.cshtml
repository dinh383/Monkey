@model Monkey.Core.Models.Auth.ChangePasswordModel
@{
    ViewData[Constants.ViewDataKey.Title] = "Owl | Portal - Change Password";
}

<div class="page-header">
    <h1 class="page-title">Change Password</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col-lg-6 center-col">
            <div class="panel">
                <div class="panel-body">
                    @using (Html.BeginForm("SubmitChangePassword", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group form-material" data-plugin="formMaterial">
                            @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-control-label", @for = $"{nameof(Model.CurrentPassword)}" })
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CurrentPassword)
                        </div>

                        <div class="form-group form-material" data-plugin="formMaterial">
                            @Html.LabelFor(m => m.Password, new { @class = "form-control-label", @for = $"{nameof(Model.Password)}" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>

                        <div class="form-group form-material" data-plugin="formMaterial">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-control-label", @for = $"{nameof(Model.ConfirmPassword)}" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group form-material">
                                <a class="btn btn-default ladda-button btn-block" data-style="slide-right" data-plugin="ladda" href="@Url.AbsoluteAction("Index", "Home")">
                                    <span class="ladda-label">
                                        <i class="icon md-long-arrow-left mr-10" aria-hidden="true"></i>Back
                                    </span>
                                </a>
                            </div>
                            <div class="col-md-6 form-group form-material">
                                <button type="submit" class="btn btn-primary ladda-button btn-block" data-style="slide-right" data-plugin="ladda">
                                    <span class="ladda-label">
                                        <i class="icon md-check mr-10" aria-hidden="true"></i>Save
                                    </span>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>