@model Monkey.Core.Models.Auth.ChangePasswordModel
@{
    ViewData[Constants.ViewDataKey.Title] = "Monkey | Portal - Change Password";
}

<div class="page-header">
    <h1 class="page-title">Change Password</h1>
</div>
<div class="page-content">
    <div class="row">
        <div class="col-lg-6 center-col">
            <div class="panel">
                <div class="panel-body">
                    <form asp-controller="Auth" asp-action="SubmitChangePassword" method="post" enctype="multipart/form-data" asp-antiforgery="true" role="form">

                        <div class="form-group form-material" data-plugin="formMaterial">
                            <label asp-for="CurrentPassword" class="form-control-label" for="@nameof(Model.CurrentPassword)"></label>
                            <input asp-for="CurrentPassword" class="form-control" type="password" />
                            <span asp-validation-for="CurrentPassword"></span>
                        </div>

                        <div class="form-group form-material" data-plugin="formMaterial">
                            <label asp-for="Password" class="form-control-label" for="@nameof(Model.Password)"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group form-material" data-plugin="formMaterial">
                            <label asp-for="ConfirmPassword" class="form-control-label" for="@nameof(Model.ConfirmPassword)"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group form-material">
                                <a class="btn btn-default ladda-button btn-block" data-style="slide-right" data-plugin="ladda" href="@Url.AbsoluteAction("Index", "Home")">
                                    <span class="ladda-label">
                                        <i class="icon md-long-arrow-left mr-10" aria-hidden="true"></i>Back
                                    </span>
                                </a>
                            </div>
                            <div class="col-md-6 form-group form-material">
                                <button type="submit" class="btn btn-primary ladda-button btn-block" data-style="slide-right" data-plugin="ladda">
                                    <span class="ladda-label">
                                        <i class="icon md-check mr-10" aria-hidden="true"></i>Save
                                    </span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>