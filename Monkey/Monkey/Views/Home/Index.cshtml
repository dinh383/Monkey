@using Newtonsoft.Json
@using Puppy.Swagger
@using Constants = Monkey.Constants
@{
    ViewData[Constants.ViewDataKey.Title] = "Landing Home";
}
@section Styles
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
}
@section Scripts{
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
}

@{
    ViewData["MarkdownContent"] = "*Italic*, **bold**, and `monospace`";
}
<markdown asp-for="@ViewData["MarkdownContent"]" />

Cache Data: @ViewBag.Cache <br />

SwaggerEndpoint: @SwaggerConfig.SwaggerEndpoint <br />
RouteTemplateEndpoint: @SwaggerConfig.RouteTemplateEndpoint <br />
RoutePrefix: @SwaggerConfig.RoutePrefix <br />

<p markdown>```json
@nameof(SystemConfigs.DatabaseConnectionString) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.DatabaseConnectionString, Formatting.Indented))
@nameof(SystemConfigs.MvcPath) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.MvcPath, Formatting.Indented))
@nameof(SystemConfigs.Serilog) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.Serilog, Formatting.Indented))
@nameof(SystemConfigs.Developers) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.Developers, Formatting.Indented))
@nameof(SystemConfigs.Server) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.Server, Formatting.Indented))
@nameof(SystemConfigs.IdentityServer) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.IdentityServer, Formatting.Indented))
@nameof(SystemConfigs.Elastic) : @Html.Raw(JsonConvert.SerializeObject(SystemConfigs.Elastic, Formatting.Indented))
```
</p>